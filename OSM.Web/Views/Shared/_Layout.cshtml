@using OSM.Web.Helper
<!DOCTYPE html>
<html lang="@CultureHelper.GetCurrentNeutralCulture()" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css" + (CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    @Styles.Render("~/Content/siteCss")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Bundle/BaseLibs")
    @Scripts.Render("~/Scripts/moment")
    @Scripts.Render("~/bundles/bootstrap" + (CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    <script src="~/Scripts/App/requireConfig.js"></script>
    <script src="~/Scripts/App/architecture.js"></script>
    <!-- Stylesheets -->
    <link href="~/Content/Admin/style/bootstrap.css" rel="stylesheet">
    <!-- Font awesome icon -->
    <link rel="stylesheet" href="~/Content/fonts/font-awesome.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="~/Content/Admin/jquery-ui-1.9.2.custom.min.css">
    <!-- Calendar -->
    <link rel="stylesheet" href="~/Content/Admin/style/fullcalendar.css">
    <!-- prettyPhoto -->
    <link rel="stylesheet" href="~/Content/Admin/style/prettyPhoto.css">
    <!-- Star rating -->
    <link rel="stylesheet" href="~/Content/Admin/style/rateit.css">
    <!-- Date picker -->
    <link rel="stylesheet" href="~/Content/Admin/style/bootstrap-datetimepicker.min.css">
    <!-- CLEditor -->
    <link rel="stylesheet" href="~/Content/Admin/style/jquery.cleditor.css">
    <!-- Uniform -->
    <link rel="stylesheet" href="~/Content/Admin/style/uniform.default.html">
    <!-- Uniform -->
    <link rel="stylesheet" href="~/Content/Admin/style/daterangepicker-bs3.css" />
    <!-- Bootstrap toggle -->
    <link rel="stylesheet" href="~/Content/Admin/style/bootstrap-switch.css">
    <!-- Main stylesheet -->
    <link href="~/Content/Admin/style/style.css" rel="stylesheet">
    <!-- Widgets stylesheet -->
    <link href="~/Content/Admin/style/widgets.css" rel="stylesheet">
    <!-- Gritter Notifications stylesheet -->
    <link href="~/Content/Admin/style/jquery.gritter.css" rel="stylesheet">

    <!-- HTML5 Support for IE -->
    <!--[if lt IE 9]>
    <script src="js/html5shim.js"></script>
    <![endif]-->
    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon/favicon.png">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                      
                      @{ Html.RenderAction("LoadMenu", "Menu", new { area = "" } ); }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div id="spinner">
        </div>
        <hr />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>
