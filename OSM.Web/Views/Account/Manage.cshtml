@model  OSM.Models.IdentityModels.ViewModels.ChangePasswordViewModel

@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p class="text-success">@ViewBag.StatusMessage</p>
<div class="mainbar">

    <!-- Page heading -->
    <div class="page-head">
        <h2>Change Password</h2>

        <div class="clearfix"></div>


        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->
    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <!-- Dashboard Graph starts -->
            <div class="row">
                <div class="col-md-12">
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-left"> You're logged in as <strong>@User.Identity.GetUserName()</strong></div>
                            <div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">
                                <!-- Form starts.  -->
                                @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label textAlignLeft">Old Password</label>
                                        <div class="col-lg-10">
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control ", placeholder = "Enter Old Password Here" })
                                            @Html.ValidationMessageFor(m => m.OldPassword)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label textAlignLeft">New Password</label>
                                        <div class="col-lg-10">
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control ", placeholder = "Enter New Password Here" })
                                            @Html.ValidationMessageFor(m => m.OldPassword)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label textAlignLeft">Confirm New Password</label>
                                        <div class="col-lg-10">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ", placeholder = "Confirm New Password Here" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                        </div>
                                    </div>

                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-6">
                                            <button type="submit" class="btn btn-circle blue">Save</button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->

</div>
