                                            <td>@item.EmailConfirmed</td>
                                            <td>@Html.ActionLink("Edit", "RegisterLVAddEdit", new { email = item.Email }) </td>
                                            @*<td>
                                                <a class="delete" href="javascript:;">Delete</a>
                                            </td>*@

                                        </tr>
                                    }

